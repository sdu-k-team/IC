<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_cell_bg"
    android:orientation="vertical"
    android:id="@+id/cell_weibo_drafts_layout"
     >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
		<TextView
		    android:id="@+id/cell_weibo_drafts_type"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="@dimen/padding_small" 
		    android:textAppearance="@android:style/TextAppearance.Medium"
		    android:gravity="center_vertical|left"
		    /> 
		<ImageView
		    android:id="@+id/cell_weibo_drafts_platform_sina"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:src="@drawable/ic_new_weibo_platform_sina_selected"
		    android:visibility="gone"
		    android:scaleType="fitCenter"
		    android:layout_gravity="center_vertical"
		    />
		<ImageView
		    android:id="@+id/cell_weibo_drafts_platform_tencent"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent" 
		    android:src="@drawable/ic_new_weibo_platform_tencent_selected"
		    android:visibility="gone"
		    android:scaleType="fitCenter"
		    android:layout_gravity="center_vertical"
		    />  
		<TextView
		    android:id="@+id/cell_weibo_drafts_time"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:padding="@dimen/padding_small" 
		    android:gravity="center_vertical|right"
		    /> 
    </LinearLayout>
	<TextView
	    android:id="@+id/cell_weibo_drafts_content"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:padding="@dimen/padding_small" 
	    android:textAppearance="@android:style/TextAppearance.Medium"
	    android:gravity="center_vertical|left"
	    /> 
    

</LinearLayout>