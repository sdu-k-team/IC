<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff"
    android:id="@+id/group_userlist_cell_layout"
    android:orientation="horizontal" >
    <com.kernel.intelcurrent.widget.UrlImageView
        android:id="@+id/group_user_list_cell_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_user_touxiang_default"
        />
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_height="fill_parent"
	    android:layout_width="180dp"
	    >
	    <TextView 
	        android:layout_height="40dp"
	        android:layout_width="fill_parent"
	        android:id="@+id/group_user_list_cell_name"
	        android:text="@string/user_words"
	        android:textColor="#000000"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:typeface="monospace"
	        android:textStyle="bold"
	        android:gravity="center_vertical"
	        />
	    <Button
	        android:layout_height="40dp"
	        android:layout_width="fill_parent"
	        android:textColor="#000000"
	        android:background="#00ffffff"
	        android:clickable="false"
	        android:id="@+id/group_user_list_cell_info"
	        android:gravity="center_vertical"
	        android:typeface="monospace"
	        />
	</LinearLayout>
	<TextView 
	    android:layout_height="30dp"
	    android:layout_width="30dp"
	    android:layout_marginLeft="5dp"
	    android:layout_gravity="center_vertical"
	    android:background="@drawable/ic_group_uselist_del_bg"
	    android:id="@+id/group_user_list_cell_btn"
	    android:gravity="center_vertical"
	    android:textStyle="bold"
	    />
</LinearLayout>