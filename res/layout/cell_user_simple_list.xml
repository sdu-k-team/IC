<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
   <com.kernel.intelcurrent.widget.UrlImageView
	        android:id="@+id/cell_user_simple_list_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/padding_medium"
        android:background="@drawable/ic_user_touxiang_default"
        />
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    >
	    <TextView 
	        android:layout_height="30dp"
	        android:layout_width="fill_parent"
	        android:id="@+id/cell_user_simple_list_nick"
	        android:text="@string/user_words"
	        android:textColor="#000000"
	        android:typeface="monospace"
	        android:textStyle="bold"
	        android:gravity="center_vertical|left"
	        />
	    <TextView 
	        android:layout_height="30dp"
	        android:layout_width="fill_parent"
	        android:textColor="#000000"
	        android:id="@+id/cell_user_simple_list_name"
	        android:gravity="center_vertical|left"
	        android:typeface="monospace"
	        />
	</LinearLayout>
</LinearLayout>